{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.js"]
}